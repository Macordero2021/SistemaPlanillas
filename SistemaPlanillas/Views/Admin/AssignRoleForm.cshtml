    <div id="4411b5c0-f318-40b5-88ed-174d92c6881e" style="display: block !important; z-index: 2147483647 !important;"></div>

    <div class="wrapper">
        <div class="form-container">
            <form action="@Url.Action("StoreEditAssignRoleForm", "Admin" , new { id = @Model.userToEdit.id })" method="post"><!-- user2.id llega null corregir -->
                <div class="form-group">
                    <h1>Edit Role Form</h1>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Name" name="name" value="@Model.userToEdit.name" disabled>
                        <label for="floatingInput">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Last Name" name="lastName" value="@Model.userToEdit.lastname" disabled>
                        <label for="floatingInput">Last Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="oldEmail" placeholder="Email" name="oldEmail" value="@Model.userToEdit.email" disabled>
                        <label for="floatingInput">Old Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="oldRole" placeholder="Email" name="oldRol" value="@Model.roleToEdit.name_rol" disabled>
                        <label for="floatingInput">Old Role</label>
                    </div>


                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="oldStatus" placeholder="Email" name="oldStatus" value="@Model.userToEdit.User_Status.name_status" disabled>
                        <label for="floatingInput">Old Status</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="newEmail" name="newEmail">
                        <label for="floatingInput">Nuevo Email</label>
                    </div>


                    <div class="form-group">
                        <label for="newStatus" class="form-label mt-4">New Status</label>
                        <select class="form-select" id="newStatus" name="newStatus" required>
                            <option>Choose a new Status</option>
                            @foreach (var RDU in Model.StatusList)
                            {
                                {
                                    <option>@RDU.name_status</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="newRol" class="form-label mt-4">Role</label>
                        <select class="form-select" id="newRole" name="newRol" required>
                            <option>Choose a new Role</option>
                            @foreach (var RDU in Model.RolesList)
                            {
                                {
                                    <option>@RDU.name_rol</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <input type="hidden" name="id" value="@Model.userToEdit.id" />
                <input type="hidden" name="idUserAdmin" value="@idModel" />
                <!--================ Buttons =================-->
                <div class="button-container">
                    <button type="submit">Save</button>
                    <button type="reset">Cancel</button>
                    <br />
                </div>
            </form>

    </div><!--================ End of Form container =================-->
    </div><!--================ End of Wrapper =================-->
