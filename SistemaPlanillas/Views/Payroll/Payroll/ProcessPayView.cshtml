<script>
    window.onload = function () {
        const selectElement = document.querySelector('.form-select');
        const forms = document.querySelectorAll('form');

        selectElement.addEventListener('change', function () {


            if (selectElement.value == "mensual") {
                forms[0].style.display = "block";
                forms[1].style.display = "none";
            } else if (selectElement.value == "por-hora") {
                forms[0].style.display = "none";
                forms[1].style.display = "block";
            }
        });
    };
</script>

<script>
    $(document).ready(function () {
        var selectElement = $('#selectDias');

        var selectElementSalary = $('#salary');
        var selectElementDeductions = $('#deductions');
        var selectElementPaymentExtra = $('#paymentsExtraordinary');
       

        // Agregar un evento de cambio al <select>
        selectElement.change(function () {
            // Obtener el valor seleccionado
            var selectedValue = selectElement.val(); // valor de los dias seleccionados
            var selectedValueSalary = selectElementSalary[0].value; // valor del salario
            var selectedValueDeductions = selectElementDeductions[0].value;// total de las deducciones
            var selectedValuetPaymentExtra = selectElementPaymentExtra[0].value;// total de los pagos extraordinarios

            $.ajax({
                type: 'GET',
                url: '/Payment/formula',
                data: {
                    dias: selectedValue,
                    salary: selectedValueSalary,
                    deducciones: selectedValueDeductions,
                    pagosExtraordinarios: selectedValuetPaymentExtra,
                    
                }, 
                success: function (response) {
                    // 'response' contendrá el resultado en formato JSON
                    var total = response.total;

                    console.log(total);
                    var selectElementMonto = $('#monto');

                    selectElementMonto[0].value = total;

                }
            });

        });
    });
</script>





