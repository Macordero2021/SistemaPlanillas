    <br /> <br />

           <form action="/Payment/storePaymentMensual" method="post" style="display:none">

               <h1>Mensual</h1>
               <select class="form-select" aria-label="Default select example" id="selectDias" required name="diasSeleccionados">
                   <option selected>Dias trabajados</option>
                   @for (int i = 0; i <= 31; i++)
                   {
                       <option value="@i">@i</option>
                   }
               </select>
               <div class="mb-3 mt-3">
                   <label for="comment">Note:</label>
                   <textarea class="form-control" rows="4" name="note"></textarea>
               </div>
               <div class="mb-3 mt-3">
                   <label class="form-label">Monto de pago:</label>
                   <input type="text" class="form-control" id="monto" value="" placeholder="Monto de pago" name="montoPago" readonly>
               </div>
               <br />

               <input type="hidden" name="idUserLogin" value="@idUserLogin" />
               <input type="hidden" name="idUserEdit" value="@idUserEdit" />



               <input type="hidden" id="salary" value="@salary" />
               <input type="hidden" id="deductions" value="@deductions" />
               <input type="hidden" id="paymentsExtraordinary" value="@paymentsExtraordinary" />


               <button type="submit" class="btn btn-primary">Submit</button>
           </form>





    <form action="/Payment/storePaymentHoras" method="post" style="display:none">
        <h1>Por hora</h1>

        <div class="mb-3 mt-3">
            <label">
                Horas trabajadas:</label>
                <input type="datetime-local" name="horasTrabajadas">
        </div>
        <div class="mb-3 mt-3">
            <label for="comment">Note:</label>
            <textarea class="form-control" rows="4" name="note"></textarea>
        </div>
        <div class="mb-3 mt-3">
            <label class="form-label">Monto de pago:</label>
            <input type="text" class="form-control" value="" placeholder="Monto de pago" name="montoPago" readonly>
        </div>

        <input type="hidden" name="idUserLogin" value="@idUserLogin" />
        <input type="hidden" name="idUserEdit" value="@idUserEdit" />

        <br /><br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
