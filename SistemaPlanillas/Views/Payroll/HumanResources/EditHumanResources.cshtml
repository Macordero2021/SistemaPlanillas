@model SistemaPlanillas.Models.UserToEdit

@{
    string idModel = ViewBag.idModel;
}

<html coupert-item="9AF8D9A4E502F3784AD24272D81F0381">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HumanResources</title>

    <!-- Custom styles for this template -->
    <link href="/Content/bootstrap-transform.css" rel="stylesheet">
    <link href="~/Content/StyleForms.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">XYZ S.A.</font></font></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Navegación de palanca">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PayrollView", "Role", new { userId = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Home</font></font></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProfileModule", "Role", new { userId = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Profile</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("HumanResources", "Payroll", new { id = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">RRHH</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("HolidaysModule", "Licence", new { userId = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Holidays</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("PayrollModule", "Payroll", new { userId = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Payroll</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("LicencesViewUser", "Licence", new { id = idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Licence</font></font></a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Log Out</font></font></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <div class="form-container">
            <form action="@Url.Action("StoreEditHumanForm", "Payroll" , new { id = @Model.userToEdit.id })" method="post">
                <!-- user2.id llega null corregir -->
                <div class="form-group">
                    <h1>Edit Human Resources</h1>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Name" name="name" value="@Model.userToEdit.name" disabled>
                        <label for="floatingInput">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Email" name="Email" value="@Model.userToEdit.email" disabled>
                        <label for="floatingInput">Email</label>
                    </div>

                    <div class="form-group">
                        <label for="NewDepartments" class="form-label mt-4">Department</label>
                        <select class="form-select" id="NewDepartments" name="NewDepartments" required>
                            <option>Choose a new department</option>
                            @foreach (var RDU in Model.DepartamentsList)
                            {
                                {
                                    <option>@RDU.name_departament</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="NewStatus" class="form-label mt-4">Status</label>
                        <select class="form-select" id="NewStatus" name="NewStatus" required>
                            <option value="" disabled>Choose a new Status</option>
                            @foreach (var RDU in Model.StatusList)
                            {
                                {
                                    <option>@RDU.name_status</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="NewPaymentMethod" class="form-label mt-4">Payment Method</label>
                        <select class="form-select" id="NewPaymentMethod" name="NewPaymentMethod" required>
                            <option value="" disabled>Choose a new PaymentMethod</option>
                            @foreach (var RDU in Model.salary_Types)
                            {
                                {
                                    <option>@RDU.SalaryType</option>
                                }
                            }
                        </select>
                    </div>

                    <label class="form-label mt-4">Current salary</label>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" name="NewSalary" value="@Model.Salary.SalaryAmount">
                        <label for="floatingInput">Salary</label>
                    </div>
                </div>

                <input type="hidden" name="id" value="@Model.userToEdit.id" />
                <input type="hidden" name="idUserAdmin" value="@idModel" />
                <!--================ Buttons =================-->
                <div class="button-container">
                    <button type="submit">Save</button>
                    <button type="reset">Cancel</button>
                    <br />
                </div>
            </form>
        </div>
    </div>

            @Scripts.Render("~/bundles/bootstrap")
</body>
</html>