<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FormUserCreate</title>
    <link href="/Content/bootstrap-transform.css" rel="stylesheet">
    <link href="~/Content/StyleForms.css" rel="stylesheet" />

    <!-- Import SweetAlert library -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">XYZ S.A.</font></font></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Navegación de palanca">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Home</font></font></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SignupForm", "User")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Sign Up</font></font></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("LoginForm", "User")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Log In</font></font></a>
                    </li>
                </ul>
                <form class="d-flex">
                </form>
            </div>
        </div>
    </nav>
    <div id="4411b5c0-f318-40b5-88ed-174d92c6881e" style="display: block !important; z-index: 2147483647 !important;"></div>

    <div class="wrapper">
        <div class="form-container">
            <form action="@Url.Action("storeUser", "User")" method="post">
                <div class="form-group">
                    <h1>Sign Up Form</h1>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Name" name="name" value="@TempData["name"]" required>
                        <label for="floatingInput">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Last Name" name="lastName" value="@TempData["lastName"]" required>
                        <label for="floatingInput">Last Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="Email" name="email" value="@TempData["email"]" required>
                        <label for="floatingInput">Email</label>
                        <p>@TempData["repeatEmail"]</p>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Phone" name="phone" value="@TempData["phone"]" required>
                        <label for="floatingInput">Phone</label>
                    </div>

                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="pass1" value="@ViewBag.pass" required>
                        <label for="floatingPassword"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Password</font></font></label>
                        <p>@TempData["contraseñaIncorrecta"]</p>
                    </div>

                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password again" name="pass2" value="@ViewBag.pass" required>
                        <label for="floatingPassword"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Password again</font></font></label>
                        <p>@TempData["contraseñaIncorrecta"]</p>
                    </div>

                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Department</label>
                        <select class="form-select" id="exampleSelect1" name="departments" required>
                            <option>Choose a department</option>
                            @foreach (var departments in Model)
                            {
                                <option>@departments.name_departament</option>
                            }
                        </select>
                        <p>@TempData["seleccionarDepartamento"]</p>

                    </div>
                    <!-- Add a button to trigger the SweetAlert message -->
                    <button type="button" id="successButton" style="display:none;"></button>

                    <!--================ Buttons =================-->
                    <div class="button-container">
                        <button type="submit">Save</button>
                        <button type="reset">Cancel</button>
                        <br />

                    </div>
                </div>
            </form>

        </div><!--================ End of Form container =================-->
    </div><!--================ End of Wrapper =================-->

    @Scripts.Render("~/bundles/bootstrap")

    <!--================ Script for SweetAlert =================-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Show the SweetAlert message when the user is created successfully
            var usuarioCreadoCorrectamente = '@TempData["UsuarioCreadoCorrectamente"]';
            if (usuarioCreadoCorrectamente) {
                Swal.fire({
                    title: 'User created successfully',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 3000 // The message will disappear after 3 seconds
                });
            }
        });
    </script>
    <!--================ End of Script for SweetAlert =================-->
</body>
</html>