
@model List<SistemaPlanillas.Models.Roles>
<html coupert-item="9AF8D9A4E502F3784AD24272D81F0381">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>

    <!-- Custom styles for this template -->
    <link href="/Content/bootstrap-transform.css" rel="stylesheet">
    <link href="~/Content/StyleForms.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>







    @if (Session["role"] == null || Session["role"].ToString() == "Undefined" || string.IsNullOrEmpty(Session["role"].ToString()))
    {

        <script>
            window.addEventListener('load', function () {
                window.location.href = "https://localhost:44319/User/LoginForm";
            });
        </script>
    }


    else if (Session["role"].ToString() == "Admin")
    {
        <h1>Modulo CRUD Roles</h1>

        <br /> <br /><br />



                     <form action="@Url.Action("storeRol", "Role")" method="post">
                         <div class="mb-3">
                             <label for="nameRol" class="form-label">Nombre del rol</label>
                             <input type="text" class="form-control" name="rol">
                         </div>
                         <button type="submit" class="btn btn-primary">Guardar rol</button>
                         <br />
                         <p>@TempData["repeatNameRol"]</p>

                     </form>

        <br /> <br /><br />

        <h1>Tabla de roles</h1>


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Accion</th>
                    <th scope="col">Accion</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var roles in Model)
                {
                    <tr>
                        <td>@roles.name_rol</td>
                        <td>Editar</td>
                        <td>Eliminar</td>
                    </tr>
                }
            </tbody>
        </table>
    }


















</body>
</html>
