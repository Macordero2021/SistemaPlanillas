@model List<SistemaPlanillas.Models.Roles>

@{
    string idModel = ViewBag.idModel;
}

<html coupert-item="9AF8D9A4E502F3784AD24272D81F0381">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>

    <!-- Custom styles for this template -->
    <link href="/Content/bootstrap-transform.css" rel="stylesheet">
    <link href="~/Content/StyleForms.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">XYZ S.A.</font></font></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Navegación de palanca">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:44319/Role/AdminView?userId=@idModel"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Home</font></font></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProfileModule", "Role", new { id = @idModel  })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Profile</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("RoleModule", "Role", new { id = @idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Roles</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("AssignRole", "Role", new { id = @idModel })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Assign Roles</font></font></a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Log Out</font></font></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <main>


    </main>
    <h1 style="margin-bottom:50px;">Modulo CRUD Roles</h1>

    <form action="@Url.Action("CreateRole", "Role", new { id = @idModel })" method="post" style="margin-bottom:50px;">
        <div class="mb-3">
            <label for="nameRol" class="form-label">Nombre del rol</label>
            <input type="text" style="text-transform:uppercase" oninput="this.value = this.value.toUpperCase();" class="form-control" name="rol">
        </div>
        <button type="submit" class="btn btn-primary">Guardar rol</button>
        <br />
        <br />
        <p>@TempData["repeatNameRol"]</p>
        <p>@TempData["successRol"]</p>
        <p>@TempData["deleteSuccess"]</p>


    </form>

    <h1>Tabla de roles</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Accion</th>
                <th scope="col">Accion</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var roles in Model)
            {
                <tr>
                    <td>@roles.name_rol</td>
                    <td>
                        <form action="@Url.Action("EditRoleForm", "Role")" method="get">
                            <input type="hidden" name="idUser" value="@idModel" />
                            <input type="hidden" name="id" value="@roles.id" />
                            <button type="submit" class="btn btn-primary">Editar</button>
                        </form>
                    </td>
                    <td>
                        <form action="@Url.Action("DeleteRole", "Role")" method="post">
                            <input type="hidden" name="idUser" value="@idModel" />
                            <input type="hidden" name="id" value="@roles.id" />
                            <button type="submit" class="btn btn-primary">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
