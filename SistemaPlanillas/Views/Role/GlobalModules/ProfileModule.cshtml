@model SistemaPlanillas.Models.modelCompuestoInd

@{
    string role = ViewBag.role;
}

<html coupert-item="9AF8D9A4E502F3784AD24272D81F0381">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>

    <!-- Custom styles for this template -->
    <link href="/Content/bootstrap-transform.css" rel="stylesheet">
    <link href="~/Content/StyleForms.css" rel="stylesheet">
</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">XYZ S.A.</font></font></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Navegación de palanca">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:44319/Role/AdminView?userId=@Model.User.id"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Home</font></font></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProfileModule", "Role", new { id = @Model.User.id })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Profile</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("RoleModule", "Role", new { id = @Model.User.id })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Roles</font></font></a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("AssignRole", "Role", new { id = @Model.User.id })"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Assign Roles</font></font></a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Log Out</font></font></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="profile-wrapper">
        <div class="profile-container">
            <div>
                <h1 style="margin-bottom:50px;">Hi @Model.User.name!</h1>
            </div>

            <h1 class="table-title">Your personal Information</h1>
            <table class="table">

                <tbody>
                    <tr>
                        <td>
                            <div class="input-container">
                                <strong>Name:</strong> @Model.User.name
                                <div class="input-wrapper">
                                    <input type="text" name="name" value="" />
                                    <button>Update</button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="input-container"><strong>Department:</strong> @Model.Departaments.name_departament</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-container">
                                <strong>Last Name(s):</strong> @Model.User.lastname
                                <div class="input-wrapper">
                                    <input type="text" name="name" value="" />
                                    <button>Update</button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="input-container"><strong>Your Role:</strong> @ViewBag.role</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-container">
                                <strong>Phone Number:</strong> @Model.User.phone
                                <div class="input-wrapper">
                                    <input type="text" name="name" value="" />
                                    <button>Update</button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="input-container"><strong>Tipo de pago:</strong> @Model.Status.name_status</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-container">
                                <strong>Email:</strong> @Model.User.email
                                <div class="input-wrapper">
                                    <input type="text" name="name" value="" />
                                    <button>Update</button>
                                </div>
                            </div>
                        </td>

                        <td>
                            <div class="input-container"><strong>Monto del salario:</strong> @Model.Status.name_status</div>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </main>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>